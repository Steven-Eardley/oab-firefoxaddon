{
  "name": "Open Access Button",
  "version": "0.7",
  "manifest_version": 2,
  "description": "Push Button. Get Research. Make Progress.",
  "icons": { "128": "img/oa128.png" },
  "browser_action": {
    "default_title": "OA Button",
    "default_icon": "img/oa128.png",
    "default_popup": "ui/bootstrapper.html"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "storage",
    "geolocation"
  ],
  "applications": {
    "gecko": {
      "id": "firefoxaddon@oabutton.org"
    }
  }
}
